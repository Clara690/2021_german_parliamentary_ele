
@article{hsiaoCornerCrewDigital2023,
	title = {The {Corner}, the {Crew}, and the {Digital} {Street}: {Multiplex} {Networks} of {Gang} {Online}-{Offline} {Conflict} {Dynamics} in the {Digital} {Age}},
